<!-- Page Header -->
<header class="masthead" style="background-image: url('<%= image_url(yield(:image).presence || "home-bg.jpg") %>')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1><%= yield(:title).presence || 'Clean Blog' %></h1>
          <span class="subheading"><%= yield(:summary).presence || 'A Blog Theme by Start Bootstrap' %></span>
        </div>
      </div>
    </div>
  </div>
</header>